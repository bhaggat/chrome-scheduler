{
  "manifest_version": 3,
  "name": "Scheduled Website Opener",
  "version": "2.0.0",
  "permissions": ["storage", "alarms", "tabs"],
  "description": "Automatically open specific websites at scheduled times: daily, weekly, monthly, or custom.",
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_popup": "index.html"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}
